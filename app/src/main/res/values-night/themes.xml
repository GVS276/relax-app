<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RelaxAPP" parent="@style/NoBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/accent_app_night</item>
        <item name="colorPrimaryVariant">@color/accent_app_night</item>
        <item name="colorOnPrimary">@color/accent_app_night</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent_text_night</item>
        <item name="colorSecondaryVariant">@color/accent_text_night</item>
        <item name="colorOnSecondary">@color/accent_app_night</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/accent_nav_night</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/accent_app_night</item>
        <item name="colorTextAndTint">@color/accent_text_night</item>
        <item name="colorNav">@color/accent_nav_night</item>
    </style>
</resources>